#!/bin/bash

if [ "$(id -u)" != "0" ]; then
   echo "Script must be run as root !"
   exit 0
fi


echo ""
date
echo -e "\033[36m==================================================="
echo "Creating Ubuntu/Debian SD Card (image) for OrangePI"
echo -e "===================================================\033[37m"
echo ""

_DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
cd $_DIR

# ===================================================
if [ "${1}" = "" ]; then
    echo "Source directory not specified."
    echo "USAGE: image_from_dir <directory> <img_name | /dev/sdX> [noformat] [opi-2|opi-PC|opi-plus|opi-one|opi-lite|opi-pcplus|opi-plus2e]"
    exit 0
fi

if [ "${2}" = "" ]; then
    echo "Destination not specified."
    echo "USAGE: image_from_dir <directory> <img_name | /dev/sdX> [noformat] [opi-2|opi-PC|opi-plus|opi-one|opi-lite|opi-pcplus|opi-plus2e]"
    exit 0
fi

idir=$1             

if [ ! -d $idir ]; then
    echo "Source directory not found."
    echo "USAGE: image_from_dir <directory> <img_name | /dev/sdX> [noformat] [opi-2|opi-PC|opi-plus|opi-one|opi-lite|opi-pcplus|opi-plus2e]"
    exit 0
fi
# ===================================================

. params.sh

# ********************************************************
# Linux partition size IS CALCULATED from directory size *
# ********************************************************
_ext4size=`du -s $1 | awk '{print $1}'` 
ext4sizeMB=$(expr $_ext4size / 1024)        
ext4size=$(expr $ext4sizeMB / 2 + $ext4sizeMB) 
linuxsize=$(expr $ext4sizeMB + 500)            

_boot_on_ext4="no"


image_name="$2"
odir="_extdir"
bootdir="_fatdir"

if [ "${3}" != "noformat" ] ; then
# =========
. format.sh
# =========
fi

# === Show info ===============
echo ""
echo "==== Info ===="
echo "    from: $idir"       
echo "      to: $sdcard"     
#echo "ext4boot: $_boot_on_ext4"
if [ "${_format}" = "btrfs" ] ; then
    echo "   btrfs: yes"
else
    echo "   btrfs: no"
fi
echo "dir size: $ext4sizeMB MB" 
echo "img size: $linuxsize MB"  
echo "=============="
echo ""

# -------------------------------------------------------------------
    
if [ ! "${_boot_on_ext4}" = "yes" ] ; then      
    if [ ! -d $bootdir ]; then
	mkdir -p $bootdir
    fi
    rm $bootdir/* | tee /dev/null 2>&1  
    sync
    umount $bootdir | tee /dev/null 2>&1
fi

if [ ! -d $odir ]; then                 
    mkdir -p $odir
fi
rm -rf $odir/* | tee /dev/null 2>&1
sync
umount $odir | tee /dev/null 2>&1
sleep 1

# ================
# MOUNT PARTITIONS
# ================

if [ "${_format}" = "btrfs" ] ; then             
    _mntopt="-o compress-force=lzo"
else
    _mntopt=""
fi

echo ""
echo "Mounting SD Card partitions..."

if [ ! "${_boot_on_ext4}" = "yes" ] ; then      
    if ! mount ${sdcard}1 $bootdir; then
	echo "ERROR mounting fat partitions..."
	exit 1
    fi
    if ! mount ${_mntopt} ${sdcard}2 $odir; then
	echo "ERROR mounting linux partitions..."
	umount $bootdir
	exit 1
    fi
    echo "FAT partitions mounted to $bootdir"
else
    if ! mount ${_mntopt} ${sdcard}1 $odir; then
	echo "ERROR mounting linux partitions..."
	exit 1
    fi
fi
echo "linux partition mounted to $odir"


#-----------------------------------------------------------------------------------------------
echo ""
echo "Copying file system to image ..."
echo ""

#-------------------------------------------------------------------------------
rsync -r -t -p -o -g -x --delete -l -H -D --numeric-ids -s --stats $idir/ $odir/
#-------------------------------------------------------------------------------
sync

# === Copy kernel, modules & scripts =============================================
if [ ! -d $odir/usr/local/bin ]; then
    mkdir -p $odir/usr/local/bin
fi
if [ ! -d $odir/boot ]; then
    mkdir -p $odir/boot
fi
if [ ! -d $odir/media/boot ]; then
    mkdir -p $odir/media/boot
fi
rm -r $odir/boot/* | tee /dev/null 2>&1
cp orange/uImage_OPI* $odir/boot | tee /dev/null 2>&1
cp orange/boot0_OPI.fex $odir/boot | tee /dev/null 2>&1
cp orange/u-boot_OPI*.fex $odir/boot | tee /dev/null 2>&1
cp fs_resize $odir/usr/local/bin | tee /dev/null 2>&1
cp update_kernel.sh $odir/usr/local/bin | tee /dev/null 2>&1
cp install_* $odir/usr/local/bin | tee /dev/null 2>&1
if [ "${3}" = "noinstallscr" ] || [ "${4}" = "noinstallscr" ] || [ "${5}" = "noinstallscr" ]; then
    rm $odir/usr/local/bin/install_*_desktop | tee /dev/null 2>&1
fi

if [ "${3}" = "opi-2" ] || [ "${4}" = "opi-2" ]; then
    cp orange/uImage_OPI-2 $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-2_* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-2 $bootdir/uImage | tee /dev/null 2>&1
        cp orange/script.bin.OPI-2_720p60_hdmi $bootdir/script.bin | tee /dev/null 2>&1
        cp orange/script.bin.OPI-2_* $bootdir | tee /dev/null 2>&1
    fi
elif [ "${3}" = "opi-pc" ] || [ "${4}" = "opi-pc" ]; then
    cp orange/uImage_OPI-2 $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-PC_* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-2 $bootdir/uImage | tee /dev/null 2>&1
        cp orange/script.bin.OPI-PC_720p60_hdmi $bootdir/script.bin | tee /dev/null 2>&1
        cp orange/script.bin.OPI-PC_* $bootdir | tee /dev/null 2>&1
    fi
elif [ "${3}" = "opi-plus" ] || [ "${4}" = "opi-plus" ]; then
    cp orange/uImage_OPI-PLUS $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-PLUS_* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-PLUS $bootdir/uImage | tee /dev/null 2>&1
        cp orange/script.bin.OPI-PLUS_720p60_hdmi $bootdir/script.bin | tee /dev/null 2>&1
        cp orange/script.bin.OPI-PLUS_* $bootdir | tee /dev/null 2>&1
    fi
elif [ "${3}" = "opi-one" ] || [ "${4}" = "opi-one" ]; then
    cp orange/uImage_OPI-2 $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-ONE_* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-2 $bootdir/uImage | tee /dev/null 2>&1
        cp orange/script.bin.OPI-ONE_720p_hdmi $bootdir/script.bin | tee /dev/null 2>&1
    fi
elif [ "${3}" = "opi-lite" ] || [ "${4}" = "opi-lite" ]; then
    cp orange/uImage_OPI-2 $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-LITE_* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-2 $bootdir/uImage | tee /dev/null 2>&1
        cp orange/script.bin.OPI-LITE_720p_hdmi $bootdir/script.bin | tee /dev/null 2>&1
        sed -i '/8189es/c8189fs'  $odir/etc/modules 
    fi
elif [ "${3}" = "opi-pcplus" ] || [ "${4}" = "opi-pcplus" ]; then
    cp orange/uImage_OPI-2 $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-PCPLUS_* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-2 $bootdir/uImage | tee /dev/null 2>&1
        cp orange/script.bin.OPI-PCPLUS_720p_hdmi $bootdir/script.bin | tee /dev/null 2>&1
        sed -i '/8189es/c8189fs'  $odir/etc/modules 
    fi
elif [ "${3}" = "opi-plus2e" ] || [ "${4}" = "opi-plus2e" ]; then
    cp orange/uImage_OPI-PLUS $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-PLUS2E_* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-PLUS $bootdir/uImage | tee /dev/null 2>&1
        cp orange/script.bin.OPI-PLUS2E_720p_hdmi $bootdir/script.bin | tee /dev/null 2>&1
        sed -i '/8189es/c8189fs'  $odir/etc/modules 
    fi
else
    cp orange/uImage_OPI-2 $odir/boot/uImage | tee /dev/null 2>&1
    cp orange/script.bin.OPI-* $odir/boot | tee /dev/null 2>&1
    if [ ! "${_boot_on_ext4}" = "yes" ] ; then
        cp orange/uImage_OPI-2 $bootdir/uImage | tee /dev/null 2>&1
        cp orange/uImage_OPI* $bootdir | tee /dev/null 2>&1
        cp orange/script.bin.OPI-* $bootdir | tee /dev/null 2>&1
        cp orange/script.bin.OPI-2_720p60_hdmi $bootdir/script.bin | tee /dev/null 2>&1
    fi
fi

rm -r $odir/lib/modules/* | tee /dev/null 2>&1
cp -rf orange/lib/modules $odir/lib | tee /dev/null 2>&1
rm -r $odir/lib/firmware/* | tee /dev/null 2>&1
cp -rf orange/lib/firmware $odir/lib | tee /dev/null 2>&1
chown -R root:root $odir/lib/* | tee /dev/null 2>&1

# ================================================================================
sync


# ************************
# Create fs_resize warning
# ************************
cat > ${odir}/usr/local/bin/fs_resize_warning << _EOF_
#!/bin/sh

echo -e "\033[31m\033[1m***********************************************"
echo -e "WARNING: TO RESIZE FILESYSTEM RUN:"
echo -e "sudo fs_resize or sudo /usr/local/bin/fs_resize"
echo -e "to remove this message run:"
echo -e "sudo rm /usr/local/bin/fs_resize_warning"
echo -e "***********************************************\033[22m\033[37m"
setterm -default

_EOF_
chmod +x ${odir}/usr/local/bin/fs_resize_warning

# ***************
# Create fstab
# ***************
echo "Creating \"fstab\""
echo "# OrangePI fstab" > $odir/etc/fstab
if [ "${_format}" = "btrfs" ] ; then
    echo "/dev/mmcblk0p2  /  btrfs subvolid=0,noatime,nodiratime,compress=lzo  0 1" >> $odir/etc/fstab
else
    echo "/dev/mmcblk0p2  /  ext4  errors=remount-ro,noatime,nodiratime  0 1" >> $odir/etc/fstab
fi
echo "/dev/mmcblk0p1  /media/boot  vfat  defaults  0 0" >> $odir/etc/fstab
echo "tmpfs /tmp  tmpfs nodev,nosuid,mode=1777  0 0" >> $odir/etc/fstab

echo ""

echo "sync, please wait ..."
sync

cp -rf -d orange/lib/modules $odir/home/orangepi | tee /dev/null 2>&1

# UMOUNT
if [ ! "${_boot_on_ext4}" = "yes" ] ; then
  if ! umount $bootdir; then
      echo "ERROR unmounting fat partition."
      exit 0
  fi
  rm -rf $bootdir/* | tee /dev/null 2>&1
  rmdir $bootdir | tee /dev/null 2>&1
fi  

if ! umount $odir; then
    echo "ERROR unmounting linux partitions."
    exit 0
fi

rm -rf $odir/* | tee /dev/null 2>&1
rmdir $odir | tee /dev/null 2>&1
sync


if [ -f ${sdcard}u ] && [ -f ${sdcard}2 ]; then
    echo "Creating SDCard image..."
    dd if=${sdcard}u of=${sdcard} | tee /dev/null 2>&1
    
    if [ -f ${sdcard}1 ]; then
	dd if=${sdcard}1 of=${sdcard} bs=1M conv=notrunc oflag=append | tee /dev/null 2>&1
    fi
    
    if [ -f ${sdcard}2 ]; then
	dd if=${sdcard}2 of=${sdcard} bs=1M conv=notrunc oflag=append | tee /dev/null 2>&1
    fi

    if [ "${_compress}" = "yes" ]; then 
	echo "Compressing image..."
	xz -z -k -9 -f -v $sdcard
	md5sum $sdcard > $sdcard.md5sum
	md5sum $sdcard.xz > $sdcard.xz.md5sum
    fi
fi

echo ""
date
echo ""
echo -e "\033[36m*********************"
echo "SDCard image created."
echo -e "*********************\033[37m"
echo ""

exit 0
